@using Uniqlo.DTOs.Account
@model LoginVm

<div class="container">
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading"></h2>
                        <ul>
                            <li><a href="index.html"></a></li>
                            <li></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Form Area -->
    <div class="login-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <!-- Email or Username Field -->
                                <div class="col-md-12">
                                    <label asp-for="EmailOrUsername">Email or Username</label>
                                    <input asp-for="EmailOrUsername" placeholder="Email or Username" />
                                    <span asp-validation-for="EmailOrUsername" style="color:red"></span>
                                </div>
                                <!-- Password Field -->
                                <div class="col-md-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" type="password" placeholder="Password" />
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                                <!-- Remember Me Checkbox -->
                                <div class="col-md-12">
                                    <label>
                                        <input asp-for="Remember" type="checkbox" />
                                        Remember me
                                    </label>
                                </div>
                                <div asp-validation-summary="All"></div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                                    <div class="col-md-4 pt-1 mt-md-0">
                                        <div class="forgotton-password_info">
                                            <a asp-action="ForgetPassword"> Forgotten pasward?</a>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </form>

                    <!-- Don't have an account? Link to Register -->
                    <div class="text-center mt-4">
                        <p>Don't have an account? <a asp-action="Register" class="text-primary">Register</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
</div>
<!-- Inline CSS for Login Page -->
<style>
    .login-form {
        border: 1px solid #ddd;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .login-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 15px;
        font-size: 16px;
    }

    button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
        width: 100%;
        margin-top: 15px;
    }

    button:hover {
        background-color: #0056b3;
    }

    .login-area .row {
        display: flex;
        justify-content: center;
    }

    .login-area .col-lg-5 {
        flex: 1;
        max-width: 500px;
    }

  
    }
</style>
