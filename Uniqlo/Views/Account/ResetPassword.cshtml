@using Uniqlo.DTOs.Account
@model ResetPasswordVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Reset Password</h2>
                        <ul>
                            <li><a href="index.html">Home</a></li>
                            <li>Reset Password</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reset Password Form Area -->
    <div class="reset-password-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="reset-password-form">
                            <h4 class="login-title">Reset Your Password</h4>
                            <div class="row">
                                <!-- New Password Field -->
                                <div class="col-md-12">
                                    <label asp-for="NewPassword">New Password</label>
                                    <input asp-for="NewPassword" type="password" placeholder="Enter new password" />
                                    <span asp-validation-for="NewPassword" style="color:red"></span>
                                </div>

                                <!-- Confirm New Password Field -->
                                <div class="col-md-12">
                                    <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                                    <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm new password" />
                                    <span asp-validation-for="ConfirmNewPassword" style="color:red"></span>
                                </div>

                                <!-- Hidden Fields for userId and token -->
                                <input asp-for="userId" type="hidden" />
                                <input asp-for="token" type="hidden" />

                                <div asp-validation-summary="All"></div>

                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Reset Password
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Inline CSS for Reset Password Page -->
<style>
    .reset-password-form {
        border: 1px solid #ddd;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .login-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 15px;
        font-size: 16px;
    }

    button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
        width: 100%;
        margin-top: 15px;
    }

    button:hover {
        background-color: #0056b3;
    }

    .reset-password-area .row {
        display: flex;
        justify-content: center;
    }

    .reset-password-area .col-lg-5 {
        flex: 1;
        max-width: 500px;
    }

    
    }
</style>
